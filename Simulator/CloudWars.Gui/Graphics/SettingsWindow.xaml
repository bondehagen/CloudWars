<Window x:Class="CloudWars.Graphics.SettingsWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="GameSettings" Height="300" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
	<Grid>
		<Button Content="AI vs. AI" Height="23" HorizontalAlignment="Left" Margin="93,60,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
		<Button Content="Human vs. AI" Height="23" HorizontalAlignment="Left" Margin="93,118,0,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" IsDefault="True" />
		<Button Content="Exit" Height="23" HorizontalAlignment="Left" Margin="93,147,0,0" Name="button3" VerticalAlignment="Top" Width="75" Click="Exit_Click" />
		<CheckBox Content="Fullscreen" Height="16" HorizontalAlignment="Left" Margin="93,187,0,0" Name="fullscreen" VerticalAlignment="Top" IsChecked="False" />
		<Button Content="Human" Height="23" HorizontalAlignment="Left" Margin="93,89,0,0" Name="button4" VerticalAlignment="Top" Width="75" Click="button4_Click" />
	</Grid>
</Window>